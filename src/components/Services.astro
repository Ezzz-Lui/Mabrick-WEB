---
import { navigate } from "astro:transitions/client";

const TailwindStyles = {
  CardsSection: 'max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto',
  CardNameServiceProps: 'text-xl text-white/[.9] group-hover:text-white'
}

const nameServices = {
  todo_en_uno: 'Computadoras todo en uno',
  portatiles: 'Portatiles profesionales',
  desktop: 'Computadoras de escritorio',
  accesorio: 'Accesorios y Gadgets',
  licencias: 'Licenciamiento Oficial de Software',
  perifericos: 'Perifericos alambricos e inalambricos'
};
---
    
<!-- Card Blog -->
<div class={TailwindStyles.CardsSection}>
    <!-- Title -->
    <div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
      <h2 class="text-2xl font-bold md:text-4xl md:leading-tight">Servicios</h2>
      <p class="mt-1 text-gray-600">Conoce nuestros servicios a profundidad.</p>
    </div>
  
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <a class="group relative flex flex-col w-full min-h-60 bg-center bg-cover rounded-xl hover:shadow-lg transition bg-[url('https://images.unsplash.com/photo-1588200908342-23b585c03e26?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8ODB8fFBDJTIwRGVza3RvcHxlbnwwfHwwfHx8MA%3D%3D')]" href="#">
        <div class="flex-auto p-4 md:p-6">
          <h3 class={TailwindStyles.CardNameServiceProps}><span class="font-bold">{nameServices.todo_en_uno}</span></h3>
        </div>
      </a>
      <a class="group relative flex flex-col w-full min-h-60 bg-center bg-cover rounded-xl hover:shadow-lg transition bg-[url('https://images.unsplash.com/photo-1610438250910-01cb769c1334?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NjN8fE1hY2Jvb2t8ZW58MHx8MHx8fDA%3D')]" href="#">
        <div class="flex-auto p-4 md:p-6">
          <h3 class={TailwindStyles.CardNameServiceProps}><span class="font-bold">{nameServices.portatiles}</span></h3>
        </div>
      </a>
      <a class="group relative flex flex-col w-full min-h-60 bg-center bg-cover rounded-xl hover:shadow-lg transition bg-[url('https://images.pexels.com/photos/3459979/pexels-photo-3459979.jpeg?auto=compress&cs=tinysrgb&w=600')]" href="#">
        <div class="flex-auto p-4 md:p-6">
          <h3 class={TailwindStyles.CardNameServiceProps}><span class="font-bold">{nameServices.desktop}</span></h3>
        </div>
      </a>
      <a class="group relative flex flex-col w-full min-h-60 bg-center bg-cover rounded-xl hover:shadow-lg transition bg-[url('https://images.unsplash.com/photo-1602526432604-029a709e131c?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTR8fGdhZGdldHN8ZW58MHx8MHx8fDA%3D')]" href="#">
        <div class="flex-auto p-4 md:p-6">
          <h3 class={TailwindStyles.CardNameServiceProps}><span class="font-bold">{nameServices.accesorio}</span></h3>
        </div>
      </a>
      <a class="group relative flex flex-col w-full min-h-60 bg-center bg-cover rounded-xl hover:shadow-lg transition bg-[url('https://images.unsplash.com/photo-1632239776255-0a7f24814df2?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8TWljcm9zb2Z0fGVufDB8fDB8fHww')]" href="#">
        <div class="flex-auto p-4 md:p-6">
          <h3 class={TailwindStyles.CardNameServiceProps}><span class="font-bold">{nameServices.licencias}</span></h3>
        </div>
      </a>
      <a class="group relative flex flex-col w-full min-h-60 bg-center bg-cover rounded-xl hover:shadow-lg transition bg-[url('https://images.unsplash.com/photo-1577375729078-820d5283031c?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8QWNjZXNvcmlvcyUyMHBjfGVufDB8fDB8fHww')]" href="#">
        <div class="flex-auto p-4 md:p-6">
          <h3 class={TailwindStyles.CardNameServiceProps}><span class="font-bold">{nameServices.perifericos}</span></h3>
        </div>
      </a>
    </div>
  </div>
  <!-- End Card Blog -->